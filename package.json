{
  "name": "ts-monorepo-starter",
  "repository": "git@github.com:YutaUra/ts-monorepo-starter.git",
  "author": "YutaUra <yuuta3594@outlook.jp>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "commit": "git-cz --disable-emoji",
    "git-hooks:pre-commit": "lint-staged",
    "git-hooks:commit-msg": "commitlint --edit $1",
    "check": "yarn check:format",
    "check:format": "prettier . -c",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,md,json,yml}": [
      "prettier -w"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.23",
    "cz-conventional-changelog": "^3.3.0",
    "git-cz": "^4.7.6",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  }
}
