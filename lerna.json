{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "allowBranch": "main",
      "changelogPreset": "angular",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish %s\n[skip-ci]"
    }
  }
}
